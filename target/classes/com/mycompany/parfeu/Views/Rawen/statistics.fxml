<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.parfeu.Controller.Rawen.StatisticsController"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: #ecf0f1;">

    <!-- HEADER -->
    <top>
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #34495e;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="ðŸ“Š Statistics"
                   style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Firewall Performance Metrics"
                   style="-fx-font-size: 14; -fx-text-fill: #bdc3c7;"/>
        </VBox>
    </top>

    <!-- CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
            <VBox spacing="20">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- STAT CARDS -->
                <HBox alignment="CENTER" spacing="20">
                    <!-- Total Packets -->
                    <VBox alignment="CENTER" spacing="10" prefWidth="200"
                          style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-width: 3; -fx-background-radius: 10;">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <Label text="ðŸ“¦ Total Packets" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
                        <Label fx:id="totalPacketsLabel" text="0"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                    </VBox>

                    <!-- Accepted -->
                    <VBox alignment="CENTER" spacing="10" prefWidth="200"
                          style="-fx-background-color: white; -fx-border-color: #27ae60; -fx-border-width: 3; -fx-background-radius: 10;">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <Label text="âœ… Accepted" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
                        <Label fx:id="acceptedLabel" text="0"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                    </VBox>

                    <!-- Blocked -->
                    <VBox alignment="CENTER" spacing="10" prefWidth="200"
                          style="-fx-background-color: white; -fx-border-color: #e74c3c; -fx-border-width: 3; -fx-background-radius: 10;">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <Label text="ðŸš« Blocked" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
                        <Label fx:id="blockedLabel" text="0"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                    </VBox>

                    <!-- Alerts -->
                    <VBox alignment="CENTER" spacing="10" prefWidth="200"
                          style="-fx-background-color: white; -fx-border-color: #f39c12; -fx-border-width: 3; -fx-background-radius: 10;">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <Label text="âš ï¸ Alerts" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
                        <Label fx:id="alertedLabel" text="0"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                    </VBox>
                </HBox>

                <Separator />

                <!-- CHARTS SECTION -->
                <VBox alignment="CENTER" spacing="20">
                    <Label text="ðŸ“Š Visual Analytics"
                           style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <HBox alignment="CENTER" spacing="20">
                        <!-- PIE CHART -->
                        <PieChart fx:id="pieChart" prefWidth="400" prefHeight="300"
                                  title="Actions Distribution"/>

                        <!-- TABLE VIEW -->
                        <TableView fx:id="statsTable" prefWidth="400" prefHeight="300">
                            <columns>
                                <TableColumn text="Protocol" fx:id="colProtocol" prefWidth="200"/>
                                <TableColumn text="Packets" fx:id="colPackets" prefWidth="200"/>
                            </columns>
                        </TableView>
                    </HBox>
                </VBox>

                <Separator />

                <!-- DETAILS SECTION -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10;">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Label text="ðŸ“‹ Detailed Statistics"
                           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextArea fx:id="detailsTextArea"
                              prefHeight="200" editable="false"
                              style="-fx-font-family: 'Courier New'; -fx-font-size: 12; -fx-background-color: #f8f9fa;"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- BOTTOM BUTTONS - AVEC fx:id -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #34495e;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Button fx:id="backBtn" text="â† Back" prefWidth="150" prefHeight="40"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="refreshBtn" text="ðŸ”„ Refresh" prefWidth="150" prefHeight="40"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="exportBtn" text="ðŸ“¤ Export" prefWidth="150" prefHeight="40"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>
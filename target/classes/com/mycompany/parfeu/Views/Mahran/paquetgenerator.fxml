<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="Controller.Mahran.PaquetgeneratorController">
    <stylesheets>
        <URL value="@paquetgenerator.css" />
    </stylesheets>
   <children>
      <BorderPane prefHeight="405.0" prefWidth="600.0" style="-fx-background-color: #E3F2FD;">
         <top>
            <VBox alignment="CENTER" prefHeight="51.0" prefWidth="580.0" style="-fx-background-color: #1976D2;" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Label text="Paquet Selection" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label text="Générez ou sélectionnez des paquets réseau" textFill="#bbdefb">
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </top>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </padding>
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
               </padding>
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
                     <children>
                        <Label text="Type de Paquet" textFill="#0d47a1">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                           <children>
                              <Button fx:id="ps" mnemonicParsing="false" prefWidth="150.0" style="-fx-background-color: #4CAF50;" text="Paquet Sain" textFill="WHITE" />
                              <Button fx:id="pm" mnemonicParsing="false" prefWidth="150.0" style="-fx-background-color: #F44336;" text="Paquet Malicieux" textFill="WHITE" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                           <children>
                              <TextArea fx:id="packetDisplayArea" prefHeight="100.0" prefWidth="450.0" style="-fx-border-color: #2196F3; -fx-border-width: 2; -fx-background-color: #ffffff;" />
                              <Button fx:id="firstAnalyzeButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="209.0" style="-fx-background-color: #2196F3;" text="First Analyzer" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold Italic" size="14.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="First Analyze Result" textFill="#1976d2">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="firstAnalyzeResultArea" prefHeight="100.0" prefWidth="600.0" style="-fx-border-color: #2196F3; -fx-border-width: 2; -fx-background-color: #ffffff;" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="10.0" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                     <children>
                        <Button mnemonicParsing="false" prefHeight="31.0" prefWidth="195.0" style="-fx-background-color: #000000;" text="Advanced Analysis" textFill="#f4f5ff" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800" prefWidth="900" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.parfeu.Controller.Mahran.InitialFilteringController"
            style="-fx-background-color: linear-gradient(to bottom, #0D47A1, #1565C0, #1976D2);">

    <BorderPane prefHeight="800.0" prefWidth="900.0">
        <!-- HEADER -->
        <top>
            <VBox alignment="CENTER" prefHeight="100.0" style="-fx-background-color: linear-gradient(to right, #1976D2, #FF6F00);">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                <Label text="ðŸ” INITIAL FILTERING" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
                <Label text="Basic packet validation and filtering" textFill="#FFE0B2">
                    <font>
                        <Font name="System Bold Italic" size="16.0" />
                    </font>
                </Label>
            </VBox>
        </top>

        <!-- CENTER -->
        <center>
            <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
                <VBox spacing="25.0">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>

                    <!-- PACKET INFO -->
                    <VBox spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.98); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);">
                        <padding>
                            <Insets bottom="20" left="20" right="20" top="20" />
                        </padding>
                        <Label text="ðŸ“¦ Packet Information" textFill="#1976D2">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="packetInfoArea" editable="false" prefHeight="150.0"
                                 style="-fx-control-inner-background: #F5F5F5; -fx-text-fill: #000000; -fx-font-family: 'Courier New'; -fx-font-size: 12; -fx-background-radius: 8; -fx-border-color: #1976D2; -fx-border-width: 2; -fx-border-radius: 8;" />
                    </VBox>

                    <!-- FILTERING RESULTS -->
                    <VBox spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.98); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);">
                        <padding>
                            <Insets bottom="20" left="20" right="20" top="20" />
                        </padding>
                        <Label text="âœ… Filtering Results" textFill="#FF6F00">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        
                        <GridPane hgap="20" vgap="15">
                            <!-- IP Validation -->
                            <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                  style="-fx-background-color: linear-gradient(to right, #E3F2FD, #FFF3E0); -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #1976D2; -fx-border-width: 2; -fx-border-radius: 10;">
                                <Label text="IP Validation:" style="-fx-text-fill: #000000; -fx-font-weight: bold;">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="ipValidationLabel" text="PENDING" 
                                       style="-fx-background-color: #FFA726; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 15; -fx-font-weight: bold;">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                            </HBox>

                            <!-- Port Validation -->
                            <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                  style="-fx-background-color: linear-gradient(to right, #E3F2FD, #FFF3E0); -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #1976D2; -fx-border-width: 2; -fx-border-radius: 10;">
                                <Label text="Port Validation:" style="-fx-text-fill: #000000; -fx-font-weight: bold;">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="portValidationLabel" text="PENDING" 
                                       style="-fx-background-color: #FFA726; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 15; -fx-font-weight: bold;">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                            </HBox>

                            <!-- Protocol Check -->
                            <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                  style="-fx-background-color: linear-gradient(to right, #E3F2FD, #FFF3E0); -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #1976D2; -fx-border-width: 2; -fx-border-radius: 10;">
                                <Label text="Protocol Check:" style="-fx-text-fill: #000000; -fx-font-weight: bold;">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="protocolCheckLabel" text="PENDING" 
                                       style="-fx-background-color: #FFA726; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 15; -fx-font-weight: bold;">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                            </HBox>

                            <!-- Overall Status -->
                            <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                  style="-fx-background-color: linear-gradient(to right, #E3F2FD, #FFF3E0); -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #FF6F00; -fx-border-width: 3; -fx-border-radius: 10;">
                                <Label text="Overall Status:" style="-fx-text-fill: #000000; -fx-font-weight: bold;">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                                <Label fx:id="overallStatusLabel" text="NOT FILTERED" 
                                       style="-fx-text-fill: #95A5A6; -fx-font-weight: bold;">
                                    <font><Font name="System Bold" size="16.0" /></font>
                                </Label>
                            </VBox>

                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>

                        <Separator style="-fx-background-color: linear-gradient(to right, #1976D2, #FF6F00); -fx-padding: 2;" />

                        <Label text="ðŸ“‹ Filter Details" textFill="#FF6F00">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="filterDetailsArea" editable="false" prefHeight="200.0"
                                 style="-fx-control-inner-background: #F5F5F5; -fx-text-fill: #000000; -fx-font-family: 'Courier New'; -fx-font-size: 12; -fx-background-radius: 8; -fx-border-color: #FF6F00; -fx-border-width: 2; -fx-border-radius: 8;"
                                 promptText="Filtering details will appear here..." />
                    </VBox>

                </VBox>
            </ScrollPane>
        </center>

        <!-- BOTTOM -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #263238;">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <Button fx:id="backBtn" text="â† BACK" prefWidth="150" prefHeight="45"
                        style="-fx-background-color: #455A64; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 14;" />
                <Button fx:id="analyzeBtn" text="âž¡ï¸ DEEP ANALYSIS" prefWidth="200" prefHeight="45"
                        style="-fx-background-color: linear-gradient(to right, #1976D2, #FF6F00); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);" />
            </HBox>
        </bottom>
    </BorderPane>

</AnchorPane>
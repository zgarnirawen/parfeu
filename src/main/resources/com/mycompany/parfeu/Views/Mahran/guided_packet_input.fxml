<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800" prefWidth="900" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.parfeu.Controller.Mahran.GuidedPacketInputController"
            style="-fx-background-color: linear-gradient(to bottom, #0D47A1, #1565C0, #1976D2);">

    <BorderPane prefHeight="800.0" prefWidth="900.0">
        
        <!-- HEADER -->
        <top>
            <VBox alignment="CENTER" prefHeight="100.0" 
                  style="-fx-background-color: linear-gradient(to right, #FF6F00, #FF8F00);">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                <Label text="ðŸ›¡ï¸ PACKET CREATION WIZARD" textFill="WHITE">
                    <font><Font name="System Bold" size="32.0" /></font>
                </Label>
                <Label text="Create and analyze custom network packets" textFill="#FFE0B2">
                    <font><Font name="System Bold Italic" size="16.0" /></font>
                </Label>
            </VBox>
        </top>

        <!-- CENTER -->
        <center>
            <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
                <VBox spacing="25.0">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>

                    <!-- PACKET FORM -->
                    <VBox spacing="20.0" 
                          style="-fx-background-color: rgba(255,255,255,0.95); 
                                 -fx-background-radius: 15; 
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);">
                        <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

                        <Label text="ðŸŒ Network Information" textFill="#1976D2">
                            <font><Font name="System Bold" size="22.0" /></font>
                        </Label>

                        <GridPane hgap="20.0" vgap="15.0">

                            <!-- Source IP -->
                            <Label text="Source IP:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                   style="-fx-text-fill: #000000;">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                            <TextField fx:id="srcIPField" promptText="192.168.1.100" 
                                      GridPane.columnIndex="1" GridPane.rowIndex="0"
                                      style="-fx-text-fill: #000000;"/>

                            <!-- Destination IP -->
                            <Label text="Destination IP:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                   style="-fx-text-fill: #000000;">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                            <TextField fx:id="destIPField" promptText="192.168.1.1"
                                      GridPane.columnIndex="1" GridPane.rowIndex="1"
                                      style="-fx-text-fill: #000000;"/>

                            <!-- Source Port -->
                            <Label text="Source Port:" GridPane.columnIndex="2" GridPane.rowIndex="0"
                                   style="-fx-text-fill: #000000;">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                            <Spinner fx:id="srcPortSpinner" editable="true" 
                                    GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                            <!-- Destination Port -->
                            <Label text="Destination Port:" GridPane.columnIndex="2" GridPane.rowIndex="1"
                                   style="-fx-text-fill: #000000;">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                            <Spinner fx:id="destPortSpinner" editable="true"
                                    GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                            <!-- Protocol -->
                            <Label text="Protocol:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                                   style="-fx-text-fill: #000000;">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                            <ComboBox fx:id="protocolCombo" prefWidth="200"
                                     GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <!-- Payload -->
                            <Label text="Payload:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                                   style="-fx-text-fill: #000000;">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                            <TextArea fx:id="payloadArea" prefHeight="80" prefRowCount="3"
                                     promptText="Enter packet payload here..."
                                     GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3"
                                     style="-fx-text-fill: #000000;"/>

                            <!-- Malicious Checkbox -->
                            <CheckBox fx:id="maliciousCheckbox" text="Malicious Packet"
                                     GridPane.columnIndex="0" GridPane.rowIndex="4"
                                     style="-fx-text-fill: #000000;">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </CheckBox>

                            <!-- Attack Type -->
                            <Label text="Attack Type:" GridPane.columnIndex="2" GridPane.rowIndex="4"
                                   style="-fx-text-fill: #000000;">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                            <ComboBox fx:id="attackTypeCombo" prefWidth="200"
                                      GridPane.columnIndex="3" GridPane.rowIndex="4"
                                      style="-fx-background-radius: 8;" />

                        </GridPane>

                        <Button fx:id="generateButton" prefHeight="55" prefWidth="300" 
                                text="ðŸŽ¯ GENERATE PACKET"
                                style="-fx-background-color: linear-gradient(to right, #1976D2, #FF6F00); 
                                       -fx-text-fill: white; 
                                       -fx-font-weight: bold; 
                                       -fx-background-radius: 12; 
                                       -fx-font-size: 16; 
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);">
                            <VBox.margin><Insets top="15" /></VBox.margin>
                        </Button>
                    </VBox>

                    <!-- PACKET DISPLAY -->
                    <VBox spacing="15.0" 
                          style="-fx-background-color: rgba(255,255,255,0.95); 
                                 -fx-background-radius: 15; 
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);">
                        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

                        <Label text="ðŸ“‹ Generated Packet" textFill="#1976D2">
                            <font><Font name="System Bold" size="20.0" /></font>
                        </Label>

                        <TextArea fx:id="packetDisplayArea" editable="false" prefHeight="180.0"
                                 style="-fx-control-inner-background: #E3F2FD; 
                                        -fx-text-fill: #000000;
                                        -fx-font-family: 'Courier New'; 
                                        -fx-font-size: 12; 
                                        -fx-background-radius: 8; 
                                        -fx-border-color: #1976D2; 
                                        -fx-border-radius: 8;"
                                 promptText="Generated packet will appear here..." />
                    </VBox>

                </VBox>
            </ScrollPane>
        </center>

        <!-- BOTTOM -->
        <bottom>
            <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #263238;">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>

                <Button fx:id="backBtn" text="â† BACK TO MENU" prefWidth="180" prefHeight="45"
                        style="-fx-background-color: #455A64; 
                               -fx-text-fill: white; 
                               -fx-font-weight: bold; 
                               -fx-background-radius: 10; 
                               -fx-font-size: 14;" />

                <Button fx:id="initialFilterBtn" text="ðŸ” INITIAL FILTERING" prefWidth="220" prefHeight="45"
                        style="-fx-background-color: linear-gradient(to right, #1976D2, #FF6F00); 
                               -fx-text-fill: white; 
                               -fx-font-weight: bold; 
                               -fx-background-radius: 10; 
                               -fx-font-size: 14; 
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);" />
            </HBox>
        </bottom>

    </BorderPane>

</AnchorPane>